{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.cerberauth.com/vulnapi/draft/2024-10/security-scheme-report.schema.json",
    "title": "Operation Security Scheme Report",
    "description": "",
    "type": "object",
    "required": [
        "type",
        "scheme",
        "name"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "http",
                "oauth2",
                "openIdConnect",
                "apiKey",
                "mutualTLS",
                "none"
            ]
        },
        "scheme": {
            "type": "string",
            "description": "Value are registered in IANA Security Scheme Name Registry",
            "enum": [
                "Basic",
                "Bearer",
                "Digest",
                "OAuth",
                "PrivateToken",
                "None"
            ]
        },
        "in": {
            "type": "string",
            "enum": [
                "query",
                "header",
                "cookie"
            ]
        },
        "token_format": {
            "type": "string",
            "enum": [
                "jwt",
                "none"
            ]
        },
        "name": {
            "type": "string"
        }
    }
}